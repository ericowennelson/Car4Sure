{% extends 'base.html.twig' %}

{% block title %}Vehicle index{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Manage vehicles</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-sm btn-outline-primary float-right" href="{{ path('app_vehicle_new') }}"> 
                    New vehicle
                </a>
            </div>
            <div class="card-body">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Vin</th>
                <th>Vehicle Usage</th>
                <th>Primary Use</th>
                <th>Annual Mileage</th>
                <th>Ownership</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.id }}</td>
                <td>{{ vehicle.year }}</td>
                <td>{{ vehicle.make }}</td>
                <td>{{ vehicle.model }}</td>
                <td>{{ vehicle.vin }}</td>
                <td>{{ vehicle.vehicleUsage }}</td>
                <td>{{ vehicle.primaryUse }}</td>
                <td>{{ vehicle.annualMileage }}</td>
                <td>{{ vehicle.ownership }}</td>
                <td>
                    <form method="post" style="float: right;" action="{{ path('app_vehicle_delete', {'id': vehicle.id}) }}" onsubmit="return confirm('Do you confirm deletion of this vehicle?');">
                        <a class="btn btn-sm btn-info" href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">Show</a>
                        <a class="btn btn-sm btn-success" href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">Edit</a>
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vehicle.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
        </div>
    </div>
{% endblock %}
