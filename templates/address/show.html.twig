{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Address</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-sm btn-outline-primary float-right" href="{{ path('app_address_index') }}"> 
                    Address list
                </a>
            </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ address.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ address.state }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ address.zip }}</td>
            </tr>
        </tbody>
    </table>

    <div class="card">
            <div class="card-header">
    <a class="btn btn-sm btn-success" href="{{ path('app_address_edit', {'id': address.id}) }}">Edit</a>

     {{ include('address/_delete_form.html.twig') }}
    </div>
    </div>
    </div>
    </div>
{% endblock %}
